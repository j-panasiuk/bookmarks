{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development remix dev",
    "dev:serve": "cross-env NODE_ENV=development nodemon --watch build node_modules/.bin/remix-serve build",
    "start": "remix-serve build",
    "format": "prettier --write ./app/**/*.{ts,tsx}",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --check ./app/**/*.{ts,tsx}",
    "lint:eslint": "eslint ./app/**/*.{ts,tsx}",
    "test": "vitest"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@remix-run/node": "^1.14.2",
    "@remix-run/react": "^1.14.2",
    "@remix-run/serve": "^1.14.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "isbot": "^3.6.5",
    "lodash.maxby": "^4.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.2",
    "@remix-run/eslint-config": "^1.14.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@types/lodash.maxby": "^4.6.7",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.3"
  },
  "engines": {
    "node": ">=16"
  }
}
